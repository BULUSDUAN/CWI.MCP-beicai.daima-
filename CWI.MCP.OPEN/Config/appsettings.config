<?xml version="1.0"?>
<appSettings>
  <!-- 是否记录公司底层框架的日志信息 -->
  <add key="TraceFramework" value="false" />
  <!-- 跟踪日志是否只记录精简信息。true表示记录精简信息，false表示记录详细信息 -->
  <add key="TraceSimpleContent" value="false" />
  <!-- 上传图片大小限制，单位B(10M=10*1024*1024B)-->
  <add key="UploadFileMaxSize" value="10485760" />
  <!-- HttpRequest 请求超时配置 单位秒 默认200秒 -->
  <add key="HttpRequestTimeOut" value="600"/>
  <!--如果是域名访问则值为true，比如：www.yingmei.me ;如果不是域名访问则值为false，比如：IP地址，localhost-->
  <add key="IsDomain" value="false" />
