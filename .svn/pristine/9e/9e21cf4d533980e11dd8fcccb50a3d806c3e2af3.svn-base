<?xml version="1.0"?>
<appSettings>
  <!-- 是否记录公司底层框架的日志信息 -->
  <add key="TraceFramework" value="false" />
  <!-- 跟踪日志是否只记录精简信息。true表示记录精简信息，false表示记录详细信息 -->
  <add key="TraceSimpleContent" value="false" />
  <!-- 上传图片大小限制，单位B(10M=10*1024*1024B)-->
  <add key="UploadFileMaxSize" value="10485760" />
  <!-- HttpRequest 请求超时配置 单位秒 默认200秒 -->
  <add key="HttpRequestTimeOut" value="600"/>
  <!--如果是域名访问则值为true，比如：www.yingmei.me ;如果不是域名访问则值为false，比如：IP地址，localhost-->
  <add key="IsDomain" value="false" />
  <!-- 系统是否处于调试状态。此选项会影响向客户端显示的异常信息，JS和CSS路径等 -->
  <add key="Debug" value="true" />

  <add key="ImageUrl" value="" />
  <add key="CssUrl" value="" />
  <add key="JsUrl" value="" />
  <add key="FileUrl" value="" />
  <!-- 是否使用压缩js -->
  <add key="ZipCssJs" value="false" />
  <!-- js，css，image等静态资源的版本号 -->
  <add key="Version" value="1.1.1.2" />

  <!-- 每页面显示行数 -->
  <add key ="PageSize" value="10"/>
  <!-- 一次性显示的页数 -->
  <add key ="PageCapacity" value="10"/>
  
  <!-- 验证码失败次数 -->
  <add key="VarifyCodeFailCount" value="10"/>
  <!--验证码有效时间，单位：秒-->
  <add key="ValidatecodeExpire" value="1800"/>

  <!--启用缓存(true:是;false:否)-->
  <add key="EnableCache" value="false" />
  <!--Memcached的默认时间3分钟 单位为秒-->
  <add key="MemcachedDefaultTime" value="180" />
  <!--Memcached的自定义时间 单位为秒-->
  <add key="MemcachedCustomizeTime" value="60" />
  
  <!-- 签名密钥 -->
  <add key="SignKey" value="wyd@2016" />

  <!-- API接口域名 -->
  <add key="ApiDomainUrl" value="http://mcp.yinmei.me:8686" />
</appSettings>